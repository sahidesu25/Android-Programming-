<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mybackground"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Red"
        android:text="Angle"
        android:id="@+id/angle"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="30dp"/>

    <com.example.layout.myapplication.RotatoryKnobView2
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"

        android:id="@+id/rotaryKnobView"
        app:title="Syracuse University"
        app:image="@drawable/soccerball"
        />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.layout.myapplication.RotatoryKnobView2
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"

            android:id="@+id/rotaryKnobView2"
            app:title="Syracuse University"
            app:image="@drawable/basketball"
           />
        <com.example.layout.myapplication.RotatoryKnobView2
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"

            android:id="@+id/rotaryKnobView3"
            app:title="Syracuse University"
            app:image="@drawable/basketball"/>


    </LinearLayout>

</LinearLayout>
